{% extends 'base.html.twig' %}
{% block title %}Netflix - Log In{% endblock %}
{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <form method="post">
                <h1 class="h3 mb-3 font-weight-normal">Log In :</h1>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" class="form-control" id="exampleInputEmail1" name="email"
                        id="inputEmail" autofocus required>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" value="{{ last_username }}" id="inputPassword" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-danger btn-sm" type="submit">Log in</button>
                <a class="btn btn-sm btn-dark" href="/register">Register</a>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>
{% endblock %}